{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "node",
    "module": "ES2020",
    "outDir": "dist",
    "sourceMap": true,

    "lib": ["ES2020"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
